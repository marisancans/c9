<%= link_to "Home", root_url %>
<%= form_for @question do |f| %>
    <%= f.label :title %>:
    <%= f.text_area :title, size: "50x2" %><br>
    <%= f.label :nr %>:
    <%= f.text_field :nr %><br><br>
    Answers:<br>
    <% counter = 0 %>
    <%= f.fields_for :answers do |ff| %>
        <% counter += 1 %>
        <%= ff.text_area :name, size: "50x3" %><br>
    <% end %>
    <%= f.label :correct_answer %>:
    <%= f.number_field :correct_answer %>
    <%= f.submit "Create" %>
<% end %>