<div id="category-list" class="text-center">
	<% @categories.each do |category| %>
		<%= button_to "#{Question.where("category = ?", category).count} #{category}", home_new_question_path(category: category), remote: true, class: "btn btn-primary btn-lg sharp"  %>
	<% end %>
</div>
<div class="btn-group-vertical" id="current-question-placeholder" role="group">
</div>
<div id="response"></div>





