| <%= @question.nr %> |
<ul>
<% question.answers.each do |answer| %>
  <% if @previous_question_correct_answer.id == answer.id
    color_for_button = "red" 
  else color_for_button = "black" end %>
  <li><p style="color:<%= color_for_button %>;"><%= answer.name %></p></li>
<% end %> 
</ul>